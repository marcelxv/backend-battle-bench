{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildArgs": {
      "NEXT_PUBLIC_TS_API_URL": "$NEXT_PUBLIC_TS_API_URL",
      "NEXT_PUBLIC_RUST_API_URL": "$NEXT_PUBLIC_RUST_API_URL"
    }
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE"
  }
}